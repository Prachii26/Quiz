<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
   android:padding="16dp"
    tools:context=".QuizActivity">
<TextView
    android:id="@+id/view_score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Score:0"
    android:textSize="15dp"
    android:textColor="@android:color/holo_red_dark"
    android:freezesText="true"/>
    <TextView
        android:id="@+id/question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question : 1/x"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/view_score"
        android:textSize="15dp"
        android:freezesText="true"
        />
    <TextView
        android:id="@+id/text_view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/question_count"
        android:textSize="15dp"
        android:freezesText="true"
        />
    <TextView
        android:id="@+id/text_view_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty: "
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/text_view_category"
        android:textSize="15dp"
        android:freezesText="true"
        />
    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#FF4500"
        android:text="00:30"
        android:freezesText="true"
        android:layout_alignParentEnd="true"        />
    <TextView
        android:textColor="#FF4500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdasfsadfasdfzdcvsdsdadfadf\nasscscsdsddffafffzasfdfdsfdf\nvddsvdvdfasdfasdfasdfadf "
        android:textSize="18dp"
        android:id="@+id/view_question"
        android:layout_above="@id/radio_group"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:freezesText="true"
        />
    <RadioGroup
        android:freezesText="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:layout_centerVertical="true">
        <RadioButton
            android:id="@+id/rb1"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="Option 1"/>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="Option 2"
            android:freezesText="true"
            />
        <RadioButton
            android:freezesText="true"
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="Option 3"/>

    </RadioGroup>

    <Button
        android:id="@+id/confirm_next"
        android:freezesText="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_below="@+id/radio_group"
        android:layout_marginTop="16dp"/>
</RelativeLayout>