<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g"
    android:padding="16dp"
    tools:context=".StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Welcome to Quiz"
        android:textStyle="bold"

        android:textColor="#ffff"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_quiz"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:text="High score : 0"
        android:textSize="30dp" />

    <Button
        android:id="@+id/start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="Start Quiz" />
    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_quiz"
        android:layout_alignStart="@+id/start_quiz"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="31dp"></Spinner>

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_category"
        android:layout_alignStart="@+id/start_quiz"
        android:layout_marginStart="118dp"
        android:layout_marginTop="30dp"></Spinner>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="182dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/spinner_category"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-123dp"
        android:layout_toStartOf="@+id/highscore"
        android:text="Select the language :"
        android:textColor="#ffff"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/spinner_difficulty"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:text="Select the difficulty :"
        android:textColor="#ffff"
        android:textSize="19dp"
        android:textStyle="bold" />

</RelativeLayout>